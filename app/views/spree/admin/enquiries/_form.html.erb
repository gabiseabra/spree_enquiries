<div class="row" id="general_fields" >
  <!-- Customer Info -->
  <div class="col-xs-6 col-md-3">
    <%= f.field_container :first_name, class: ['form-group'] do %>
      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: 'form-control' %>
      <%= f.error_message_on :first_name %>
    <% end %>

    <%= f.field_container :last_name, class: ['form-group'] do %>
      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: 'form-control' %>
      <%= f.error_message_on :last_name %>
    <% end %>

    <%= f.field_container :email, class: ['form-group'] do %>
      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control' %>
      <%= f.error_message_on :email %>
    <% end %>

    <%= f.field_container :phone, class: ['form-group'] do %>
      <%= f.label :phone %>
      <%= f.text_field :phone, class: 'form-control' %>
      <%= f.error_message_on :phone %>
    <% end %>
  </div>

  <!-- Metadata -->
  <div class="col-xs-12 col-md-6">
    <%= f.field_container :title, class: ['form-group'] do %>
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
      <%= f.error_message_on :title %>
    <% end %>

    <%= f.field_container :author, class: ['form-group col-xs-12 col-md-6'] do %>
      <%= f.label :author %>
      <%= f.text_field :author, class: 'form-control' %>
      <%= f.error_message_on :author %>
    <% end %>

    <%= f.field_container :publisher, class: ['form-group col-xs-12 col-md-6'] do %>
      <%= f.label :publisher %>
      <%= f.text_field :publisher, class: 'form-control' %>
      <%= f.error_message_on :publisher %>
    <% end %>

    <%= f.field_container :description, class: ['form-group'] do %>
      <%= f.label :description %>
      <%= f.text_area :description, rows: 6, class: 'form-control' %>
    <% end %>
  </div>

  <!-- Status -->
  <div class="col-xs-6 col-md-3">
    <%= f.field_container :state, class: ['form-group'] do %>
      <%= f.label :state %>
      <%= f.select :state, Spree::Enquiry.states.keys.to_a, {}, class: 'select2' %>
      <%= f.error_message_on :state %>
    <% end %>

    <%= f.field_container :start_date, class: ['form-group'] do %>
      <%= f.label :start_date %>
      <%= f.text_field :start_date,
                       value: datepicker_field_value(@enquiry.start_date),
                       class: 'datepicker datepicker-from form-control' %>
      <%= f.error_message_on :start_date %>
    <% end %>

    <%= f.field_container :end_date, class: ['form-group'] do %>
      <%= f.label :end_date %>
      <%= f.text_field :end_date,
                       value: datepicker_field_value(@enquiry.end_date),
                       class: 'datepicker datepicker-from form-control' %>
      <%= f.error_message_on :end_date %>
    <% end %>
  </div>
</div>